{
  "app": "npx tsx bin/infra.ts",
  "watch": {
    "include": [
      "**"
    ],
    "exclude": [
      "README.md",
      "cdk*.json",
      "**/*.d.ts",
      "**/*.js",
      "tsconfig.json",
      "package*.json",
      "yarn.lock",
      "node_modules",
      "test"
    ]
  },
  "context": {
    "appName": "mastra-rag-example",
    "usePrivateSubnet": false,
    "ecr": {
      "repositoryName": "mastra-rag-example"
    },
    "ecs": {
      "cpu": "512",
      "memoryMiB": "1024",
      "applicationPort": 3000,
      "healthCheck": {
        "interval": 30,
        "timeout": 5
      }
    },
    "rdbPort": 5432
  }
}
